<p style="color: green"><%= notice %></p>

<h1 class="text-center">TWEETS</h1>

<div class="row mb-3 mt-3">

  <div class="col-md-6">

    <%= form_with url: tweets_path, method: :get, class: 'form-inline' do |form| %>
      <%= form.text_field :query_text, placeholder: 'Buscar un tweet', value: params[:query_text], class: 'form-control mr-2' %>
    <% end %>

  </div>

  <div class="col-md-6 text-right">

    <%= link_to "Nuevo tweet", new_tweet_path, class: 'btn btn-primary', id: 'btn-custom' %>

  </div>
</div>


<table class="table table-dark table-striped">

  <thead>

    <tr>
      <th scope="col">Id</th>
      <th scope="col">Username</th>
      <th scope="col">Description</th>
      <th scope="col">Accion</th>
    </tr>

  </thead>

  <tbody>

    <% @tweets.each do |tweet| %>

        <tr>
            <th scope="row"><%= tweet.id%></th>
            <td><%= tweet.username%></td>
            <td><%= tweet.description%></td>
            <td><%= link_to "Ver tweet", tweet, class: 'btn btn-primary', id: 'btn-custom' %></td>
        </tr>

    <% end %>
  </tbody>

</table>

<div class="pag-bar mt-3 pt-3">

  <%== pagy_bootstrap_nav(@pagy) %>

</div>

<div id="tweets">

  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Ver tweet", tweet, class: 'btn btn-primary', id: 'btn-custom' %>
    </p>
  <% end %>

</div>

